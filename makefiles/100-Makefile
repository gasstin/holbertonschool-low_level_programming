CC = gcc
SRC = main.c school.c : m.h
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic
HEADER = m.h

ifeq ($(HEADER),m.h)
all: $(OBJ)
	$(CC)  $(OBJ) -o $(NAME)

.PHONY: clean
clean:
	$(RM) -f $(NAME) *~

.PHONY: oclean
oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: oclean all
else
$(error m.h)
endif
