CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic
ERR = $(error 1)

.PHONY : clean oclean fclean re err
all: $(OBJ)
	$(CC)  $(OBJ) -o $(NAME)

clean:
	$(RM) -f $(NAME) *~

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: oclean all

err: ; $(ERR)
